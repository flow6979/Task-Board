{% extends 'base.html.twig' %}

{% block title %}All Teams{% endblock %}

{% block body %}
    <h1 class="text-primary">All Teams</h1>

    <a href="{{ path('create_team') }}" class="btn btn-success">Create Team</a>

    {% if teams is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.id }}</td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <a href="{{ path('show_team', {'id': team.id}) }}" class="btn btn-info">View</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <script>
            const teams = {{ teams|json_encode()|raw }};
            teams.forEach(team => {
                console.log(team);
            });
        </script>
    {% else %}
        <p>No teams found.</p>
    {% endif %}
{% endblock %}
