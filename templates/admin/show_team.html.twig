{# templates/admin/show_team.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Team Details{% endblock %}

{% block body %}
    <h1 class="text-primary">Team Details</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ team.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ team.name }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ team.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>User Count</th>
            <td>{{ userCount }}</td>
        </tr>
    </table>

    <h2 class="text-primary">Users in this Team</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                    <td>
                        <a href="{{ path('remove_user_from_team', {'teamId': team.id, 'userId': user.id}) }}" class="btn btn-danger">Remove</a>
                        {% if user.role != 'admin' %}
                            <a href="{{ path('update_user_role', {'teamId': team.id, 'userId': user.id}) }}" class="btn btn-warning">Make Admin</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('add_user_to_team') }}" class="btn btn-secondary">Add User</a>
    <a href="{{ path('show_teams') }}" class="btn btn-secondary">Back to Teams</a>
{% endblock %}
