{% extends 'base.html.twig' %}

{% block title %}Admin - Teams{% endblock %}

{% block body %}
    {# <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> #}

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            color: black;
            background-color : white;
            /* background-image: url("{{ asset('/bg/image1.png') }}"); */
            background-size: cover;
            background-position: center;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            max-width: 1200px;
            padding: 20px;
            margin-top: 20px;
        }

        .card {
            width: 300px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: transform 0.3s ease;
            text-decoration: none;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-content {
            text-align: center;
            color : black;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-details {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .profile-section {
            position: fixed;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
        }

        .profile-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #6e8efb;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            overflow: hidden;
        }

        .profile-icon img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }

        .logout-button {
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #fff;
            color: #6e8efb;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #eee;
        }
    </style>

<div class="profile-section">
    <div class="profile-icon">
        <img src="{{ asset('/path/to/profile-image.jpg') }}" alt="Profile Image">
        
    </div>
    <button class="logout-button">Logout</button>
</div>

<div class="container">
    {% set teams = [
        { id: 1, num_people: 5, pending_tasks: 3 },
        { id: 2, num_people: 8, pending_tasks: 1 },
        { id: 3, num_people: 6, pending_tasks: 5 },
        { id: 4, num_people: 4, pending_tasks: 0 },
        { id: 5, num_people: 7, pending_tasks: 2 },
        { id: 6, num_people: 7, pending_tasks: 4 },
        { id: 7, num_people: 7, pending_tasks: 1 },
        { id: 8, num_people: 7, pending_tasks: 3 },
        { id: 9, num_people: 7, pending_tasks: 0 },
        { id: 10, num_people: 7, pending_tasks: 2 },
        { id: 11, num_people: 7, pending_tasks: 1 },
        { id: 12, num_people: 7, pending_tasks: 5 }
    ] %}
    
    {% for team in teams %}
    <a href="/admin/teams/{{ team.id }}" class="card">
        <div class="card-content">
            <div class="card-title">Team {{ team.id }}</div>
            <div class="card-details">Number of People: {{ team.num_people }}</div>
            <div class="card-details">Pending Tasks: {{ team.pending_tasks }}</div>
        </div>
    </a>
    {% endfor %}
</div>

{% endblock %}
